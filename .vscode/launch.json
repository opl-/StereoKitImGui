	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/StereoKitImGuiExample",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [
				// {"name": "LD_DEBUG", "value": "all"},
			],
			"externalConsole": false,
			"MIMode": "gdb",
			"preLaunchTask": "CMake (Debug)",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}
